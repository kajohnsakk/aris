							<tr>
								<td>Store ID</td>
								<td>Found Fund</td>
								<td>Total Amount</td>
							</tr>
						</thead>
						<tbody>
							{{#each problemFunds}}
							<tr>
								<td>{{ storeID }}</td>
								<td>{{ countFund }}</td>
								<td>{{ actualAmount }}</td>
							</tr>
							{{/each}}
							<tr>
								<td align="right">Total</td>
								<td>{{ summaryResult.countFund }}</td>
								<td>{{ summaryResult.totalAmount }}</td>
							</tr>
