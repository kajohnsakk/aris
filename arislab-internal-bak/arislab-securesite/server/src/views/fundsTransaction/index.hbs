				<div class="mb-5">
					<h1 class="mb-4 text-2xl font-extrabold">Remain Funds List</h1>
					<table class="table">
						<thead>
							<tr>
								<td>Funds ID</td>
								<td>Order ID</td>
								<td>Store ID</td>
								<td>Order Type</td>
								<td>Amount</td>
								<td>Fund Date</td>
							</tr>
						</thead>
						<tbody>
							{{#each remainFundsList}}
							<tr class="{{#if isWalletType}}bg-orange-200{{/if}}">
								<td>{{ fundTransactionID }}</td>
								<td>{{ orderInfo.orderID }}</td>
								<td>{{#if storeID}}{{ storeID }}{{else}}N/A{{/if}}</td>
								<td>{{ orderType }}</td>
								<td>{{ actualAmount }}</td>
								<td>{{ fundDate }}</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
				
				<div class="mb-5">
					<h1 class="mb-4 text-2xl font-extrabold">Remain Funds List</h1>
