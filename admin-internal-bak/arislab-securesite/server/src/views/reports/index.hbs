<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Report</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #ecf0f1;
        }

        @media (min-width: 576px) {
            .modal-dialog {
                max-width: none;
            }
        }

        .modal-dialog {
            width: 68%;
            height: 92%;
            padding: 0;
        }

        .modal-content {
            height: 69%;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h1 class="mb-4">Reports</h1>
				<table class="table" id="report-table"></table>
            </div>
        </div>
    </div>
</body>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
	const reportList = [
		{ "reportName": "Store", "reportEndpoint": "store", "reportDescription": "แสดง Store ทั้งหมดที่มีอยู่ในระบบ" },
		{ "reportName": "Order Report", "reportEndpoint": "orderReport", "reportDescription": "รายงานแสดง Order ที่เข้ามาในระบบตามช่วงเวลาที่เลือก" },
		{ "reportName": "Funds Transaction Report", "reportEndpoint": "fundsTransactionReport", "reportDescription": "รายงานแสดง Funds Transaction ที่เข้ามาในระบบตามช่วงเวลาที่เลือก" },
		{ "reportName": "Order Frequency Report", "reportEndpoint": "orderFrequencyReport", "reportDescription": "รายงานแสดงจำนวน Order ในแต่ละช่วงเวลาของวัน" },
		{ "reportName": "Summary Report", "reportEndpoint": "summaryReport", "reportDescription": "รายงานสรุปจำนวน New User, จำนวน Actived User และจำนวน Order ที่เข้ามาตามช่วงเวลาที่เลือก" },
        { "reportName": "Daily Dashboard", "reportEndpoint": "dailyDashboard", "reportDescription": "จำนวน Onboarding แสดง 7 วันล่าสุด" },
		{ "reportName": "Store Package", "reportEndpoint": "storePackage", "reportDescription": "แสดง Package ของแต่ละ Store" },
		{ "reportName": "Order Inspector", "reportEndpoint": "orderInspector", "reportDescription": "ค้นหา, ตรวจสอบ และแก้ไขสถานะของรายการสั่งซื้อ" },
		{ "reportName": "Download Invoice", "reportEndpoint": "downloadInvoice", "reportDescription": "Download ไฟล์ Invoice" },
        { "reportName": "Monthly Report", "reportEndpoint": "monthlyReport", "reportDescription": "รายงานสรุปประจำเดือน" }
	];
	
	var reportData = "";
	for(var i=0; i<reportList.length; i++) {
		var report = reportList[i];
		reportData+= ( 	"<tr>"+
						"<td><a class=\"link\" href=\"\" data-url-endpoint=\""+report['reportEndpoint']+"\">"+report['reportName']+"</a></td>"+
						"<td>"+report['reportDescription']+"</td>"+
						"</tr>"	);
	}
	$("#report-table").html(reportData);
	
	
    $(document).on('click', '.link', function(e) {
        e.preventDefault();

        const HOST = window.location.origin;
        var urlEndpoint = $(this).data('url-endpoint');
        const redirectUrl = `${HOST}/${urlEndpoint}`;

        window.location.href = redirectUrl;
    });
</script>

</html>